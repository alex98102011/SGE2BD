<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardRowMateriasInscripcion"
    card:cardCornerRadius="8dp"
    card:cardElevation="15dp"
    card:cardBackgroundColor="#eee"
    android:layout_margin="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tvRowMateriaInscripcion"
            android:textColor="#fff"
            android:textStyle="bold"
            android:text="Materia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvRowCalificacionInscripcion"
            android:textColor="#fff"
            android:textStyle="bold"
            android:text="100"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <RadioGroup
            android:id="@+id/OptProfesor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/Profesor1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="Profesor A" />

            <RadioButton
                android:id="@+id/Profesor2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:text="Profesor B" />
        </RadioGroup>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btnSeleccionarMateia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_input_add"
            card:fabSize="mini"
            tools:visibility="visible">

        </com.google.android.material.floatingactionbutton.FloatingActionButton>

    </LinearLayout>

</androidx.cardview.widget.CardView>